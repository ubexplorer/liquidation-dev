                        <div>
                            <h5>
                                <field name="name" default_focus="1" placeholder="Найменування" style="width: 100%" />
                            </h5>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" />
                                <field name="group_id" />
                                <field name="type_id" />
                                <field name="bal_account" />
                                <field name="sku" />
                                <field name="dateonbalance" />
