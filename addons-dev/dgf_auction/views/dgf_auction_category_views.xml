<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dgf_auction_auction_view_tree" model="ir.ui.view">
        <field name="name">dgf.auction.category.tree</field>
        <field name="model">dgf.auction.category</field>
        <field name="arch" type="xml">
            <tree string="Категорії" editable="bottom">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>

    <record id="dgf_auction_category_action" model="ir.actions.act_window">
        <field name="name">Категорії аукціонів</field>
        <field name="res_model">dgf.auction.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
