<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.dgf.vat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="partner_autocomplete" position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                    id="vat_validate_setting"
                    title="Якщо цей параметр увімкнено код ('vat') контрагента валідуватиметься">
                    <div class="o_setting_left_pane">
                        <field name="validate_vat"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="validate_vat"/>
                        <div class="text-muted">
                           Валідувати код ('vat') контрагента
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
