<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ir.module.category -->
    <record id="base.module_category_liquidation_assets" model="ir.module.category">
        <field name="description">Активи неплатоспроможних банків.</field>
        <field name="sequence">10</field>
    </record>
    <record id="group_asset_reader" model="res.groups">
        <field name="name">Активи: перегляд</field>
        <field name="category_id" ref="base.module_category_liquidation_assets" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="group_asset_reader_bank" model="res.groups">
        <field name="name">Активи: перегляд (Банк)</field>
        <field name="category_id" ref="base.module_category_liquidation_assets" />
        <field name="implied_ids" eval="[(4, ref('dgf_asset_base.group_asset_reader'))]" />
    </record>
    <record id="group_asset_reader_dgf" model="res.groups">
        <field name="name">Активи: перегляд (ФГВФО)</field>
        <field name="category_id" ref="base.module_category_liquidation_assets" />
        <field name="implied_ids" eval="[(4, ref('dgf_asset_base.group_asset_reader'))]" />
    </record>
    <record id="group_asset_manager" model="res.groups">
        <field name="name">Активи: редагування</field>
        <field name="category_id" ref="base.module_category_liquidation_assets"/>
        <field name="implied_ids" eval="[(4, ref('dgf_asset_base.group_asset_reader'))]"/>
    </record>
    <record id="group_asset_manager_bank" model="res.groups">
        <field name="name">Активи: редагування (Банк)</field>
        <field name="category_id" ref="base.module_category_liquidation_assets"/>
        <field name="implied_ids" eval="[(4, ref('dgf_asset_base.group_asset_manager'))]"/>
    </record>
    <record id="group_asset_manager_dgf" model="res.groups">
        <field name="name">Активи: редагування (ФГВФО)</field>
        <field name="category_id" ref="base.module_category_liquidation_assets"/>
        <field name="implied_ids" eval="[(4, ref('dgf_asset_base.group_asset_manager'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
</odoo>